{
    "name": "Miles's vocabulary builder",
    "version": "1.0",
    "description": "This is my vocabulary builder extension.",
    "browser_action": {
        "default_icon": "chrome/icon.png"
    },
    "permissions": [
        "http://mmccoo.com/"      
    ],
    "background_page": "chrome/background.html",
    "content_scripts": [
        {
            "matches": ["http://mmccoo.com/vocab/*/content/*"],
            "js": [
                "htdoc/jquery-1.6.2.js",
                "htdoc/hotkeys.js",
                "htdoc/add_defs.js",
                "chrome/myscript.js"
            ]

        },
        {
            "matches": ["http://www.stern.de/politik/deutschland/*.html"],
            "js": [
                "htdoc/jquery-1.6.2.js",
                "htdoc/hotkeys.js",     
                "htdoc/add_defs.js",
                "chrome/content_script.js",
                "chrome/stern.js"
            ]

        },
        {
            "matches": ["http://www.spiegel.de/politik/deutschland/*.html"],
            "js": [
                "htdoc/jquery-1.6.2.js",
                "htdoc/hotkeys.js",     
                "htdoc/add_defs.js",
                "chrome/content_script.js",
                "chrome/spiegel.js"
            ]

        }
    ]
}